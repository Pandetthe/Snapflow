@using Microsoft.AspNetCore.Components
@namespace Snapflow.Presentation.Endpoints.Auth.FallbackForms

@code {
    [Parameter]
    public required string ResetCode { get; set; }

    [Parameter]
    public required string Email { get; set; }

    [Parameter]
    public int MinPasswordLength { get; set; }

    [Parameter]
    public int MaxPasswordLength { get; set; }

    [Parameter]
    public bool RequireLowercaseInPassword { get; set; }

    [Parameter]
    public bool RequireUppercaseInPassword { get; set; }

    [Parameter]
    public bool RequireDigitInPassword { get; set; }

    [Parameter]
    public bool RequireNonAlphanumericInPassword { get; set; }
}

<SharedShell Title="Reset password">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Reset your password</h1>
        </div>

        <form id="resetForm" novalidate oninput="checkForm(this)">
            <div class="space-y-4">
                <input id="email" name="Email" type="hidden" required value="@Email" />
                <input id="resetCode" name="ResetCode" type="hidden" required value="@ResetCode" />

                <div>
                    <label for="newPassword" class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">New password</label>
                    <div class="relative">
                        <input id="newPassword" name="NewPassword" type="password" required minlength="@MinPasswordLength" autocomplete="new-password"
                               class="w-full px-3 py-2.5 pr-12 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" />
                        <button type="button"
                                data-toggle-password
                                data-target="#newPassword"
                                aria-pressed="false"
                                aria-label="Show password"
                                class="absolute inset-y-0 right-2 inline-flex items-center px-2 text-sm font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 z-10">
                        </button>
                    </div>
                </div>

                <div>
                    <button id="submitBtn" type="submit" disabled
                            class="w-full px-4 py-2.5 text-sm bg-blue-600 hover:bg-blue-700 disabled:bg-blue-400 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg disabled:cursor-not-allowed flex items-center justify-center">
                        Reset password
                    </button>
                </div>

                <div id="passwordError" class="mt-3 text-sm text-red-600" aria-live="polite"></div>
                <div id="passwordSuccess" class="mt-3 text-sm text-green-600" style="display:none;" aria-live="polite"></div>
            </div>
        </form>
    </div>

    <script>
        const authConfig = {
          password: {
            minLength: @(MinPasswordLength),
            maxLength: @(MaxPasswordLength),
            requireLowercase: @((RequireLowercaseInPassword).ToString().ToLowerInvariant()),
            requireUppercase: @((RequireUppercaseInPassword).ToString().ToLowerInvariant()),
            requireDigit: @((RequireDigitInPassword).ToString().ToLowerInvariant()),
            requireNonAlphanumeric: @((RequireNonAlphanumericInPassword).ToString().ToLowerInvariant())
          }
        };

        const svgShow = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>`;

        const svgHide = `<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
        </svg>`;

        function validatePasswordRequirements(password) {
          return {
            lowercase: /[a-z]/.test(password),
            uppercase: /[A-Z]/.test(password),
            digit: /\d/.test(password),
            nonAlphanumeric: /[^A-Za-z0-9]/.test(password)
          };
        }

        function showError(msg) {
          const err = document.getElementById('passwordError');
          const success = document.getElementById('passwordSuccess');
          if (success) success.style.display = 'none';
          if (err) err.textContent = msg || '';
        }

        function showSuccess(msg) {
          const err = document.getElementById('passwordError');
          const success = document.getElementById('passwordSuccess');
          if (err) err.textContent = '';
          if (success) {
            success.textContent = msg || 'Password has been reset.';
            success.style.display = 'block';
          }
        }

        function checkForm(form) {
          try {
            const resetCode = form.querySelector('[name=ResetCode]').value.trim();
            const email = form.querySelector('[name=Email]').value.trim();
            const pw = form.querySelector('[name=NewPassword]').value || '';
            const btn = document.getElementById('submitBtn');

            if (!btn) return;

            if (!resetCode.length || !email.length || !pw.length) {
              btn.disabled = true;
              return;
            }

            if (pw.length < authConfig.password.minLength || pw.length > authConfig.password.maxLength) {
              btn.disabled = true;
              return;
            }

            const reqs = validatePasswordRequirements(pw);

            if (authConfig.password.requireLowercase && !reqs.lowercase) {
              btn.disabled = true;
              return;
            }
            if (authConfig.password.requireUppercase && !reqs.uppercase) {
              btn.disabled = true;
              return;
            }
            if (authConfig.password.requireDigit && !reqs.digit) {
              btn.disabled = true;
              return;
            }
            if (authConfig.password.requireNonAlphanumeric && !reqs.nonAlphanumeric) {
              btn.disabled = true;
              return;
            }

            btn.disabled = false;
          } catch (e) { }
        }

        function initPasswordToggles() {
          try {
            document.querySelectorAll('[data-toggle-password]').forEach(btn => {
              const selector = btn.getAttribute('data-target');
              if (!selector) return;
              const input = document.querySelector(selector);
              if (!input) return;

              const updateIcon = () => {
                const isPassword = input.type === 'password';
                btn.innerHTML = isPassword ? svgShow : svgHide;
                btn.setAttribute('aria-pressed', (!isPassword).toString());
                btn.setAttribute('aria-label', isPassword ? 'Show password' : 'Hide password');
              };

              updateIcon();

              btn.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                input.type = input.type === 'password' ? 'text' : 'password';
                updateIcon();
              });

              input.addEventListener('input', () => {
                updateIcon();
                const f = document.querySelector('form');
                if (f) checkForm(f);
              });
              input.addEventListener('change', () => {
                updateIcon();
                const f = document.querySelector('form');
                if (f) checkForm(f);
              });
            });
          } catch (e) { }
        }

        function initFormHandler() {
          try {
            const form = document.getElementById('resetForm');
            if (!form) return;

            form.addEventListener('submit', async function (e) {
              e.preventDefault();

              const password = form.querySelector('[name=NewPassword]').value || '';
              const resetCode = form.querySelector('[name=ResetCode]').value || '';
              const email = form.querySelector('[name=Email]').value || '';

              if (!password) {
                showError('Password is required');
                return;
              }
              if (password.length < authConfig.password.minLength) {
                showError(`Password must be at least ${authConfig.password.minLength} characters`);
                return;
              }
              if (password.length > authConfig.password.maxLength) {
                showError(`Password must be less than ${authConfig.password.maxLength} characters`);
                return;
              }

              const reqs = validatePasswordRequirements(password);
              if (authConfig.password.requireLowercase && !reqs.lowercase) {
                showError('Password must contain at least one lowercase letter');
                return;
              }
              if (authConfig.password.requireUppercase && !reqs.uppercase) {
                showError('Password must contain at least one uppercase letter');
                return;
              }
              if (authConfig.password.requireDigit && !reqs.digit) {
                showError('Password must contain at least one digit');
                return;
              }
              if (authConfig.password.requireNonAlphanumeric && !reqs.nonAlphanumeric) {
                showError('Password must contain at least one special character');
                return;
              }

              try {
                const payload = {
                  ResetCode: resetCode,
                  Email: email,
                  NewPassword: password
                };

                const resp = await fetch('/auth/reset-password', {
                  method: 'POST',
                  body: JSON.stringify(payload),
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  credentials: 'same-origin',
                  redirect: 'follow'
                });

                let bodyText = '';
                let json = null;
                const ct = resp.headers.get('content-type') || '';
                if (ct.indexOf('application/json') !== -1) {
                  json = await resp.json();
                  bodyText = json?.message ?? JSON.stringify(json);
                } else {
                  bodyText = await resp.text();
                }

                if (!resp.ok) {
                  if (json && json.errors) {
                    showError(Array.isArray(json.errors) ? json.errors[0] : JSON.stringify(json.errors));
                  } else {
                    showError(bodyText || `Server returned ${resp.status}`);
                  }
                  return;
                }

                showSuccess(json?.message ?? 'Password updated successfully.');

                if (json?.redirectUrl) {
                  const success = document.getElementById('passwordSuccess');
                  const a = document.createElement('a');
                  a.href = json.redirectUrl;
                  a.textContent = 'Continue';
                  a.className = 'ml-2 text-blue-600';
                  success.appendChild(document.createElement('br'));
                  success.appendChild(a);
                }

                form.querySelectorAll('input, button').forEach(el => el.disabled = true);

              } catch (err) {
                showError('Unexpected error. Please try again later.');
                console.error(err);
              }
            });
          } catch (e) {
          }
        }

        (function () {
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
              initPasswordToggles();
              initFormHandler();
              const f = document.querySelector('form');
              if (f) checkForm(f);
            });
          } else {
            initPasswordToggles();
            initFormHandler();
            const f = document.querySelector('form');
            if (f) checkForm(f);
          }
        })();
    </script>
</SharedShell>